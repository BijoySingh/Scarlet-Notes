<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorAccent</item>
    <item name="colorPrimaryDark">@color/material_grey_500</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    <item name="android:editTextStyle">@style/RobotoEditTextStyle</item>
  </style>

  <style name="AppTheme" parent="AppThemeBase">
  </style>

  <style name="DialogTheme">
  </style>

  <style name="BorderlessBackgroundView">
  </style>

  <style name="BorderedBackgroundView">
  </style>

  <style name="RobotoEditTextStyle" parent="android:Widget.EditText">
  </style>

  <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
  </style>

  <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
  </style>

  <style name="NoteItemActionIcon" parent="BorderlessBackgroundView">
    <item name="android:layout_width">@dimen/icon_size_large</item>
    <item name="android:layout_height">@dimen/icon_size_large</item>
    <item name="android:tint">@color/light_hint_text</item>
    <item name="android:padding">@dimen/spacing_xsmall</item>
    <item name="android:layout_gravity">center_vertical|end</item>
  </style>

  <style name="NoteNotificationItemActionIcon">
    <item name="android:layout_width">@dimen/icon_size_xlarge</item>
    <item name="android:layout_height">@dimen/icon_size_large</item>
    <item name="android:tint">@color/light_hint_text</item>
    <item name="android:padding">@dimen/spacing_xsmall</item>
    <item name="android:layout_gravity">center_vertical|end</item>
  </style>

  <style name="FormatLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">top</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="FormatActionButtons" parent="BorderlessBackgroundView">
    <item name="android:layout_width">@dimen/icon_size_normal</item>
    <item name="android:layout_height">@dimen/icon_size_normal</item>
    <item name="android:tint">@color/dark_hint_text</item>
    <item name="android:layout_margin">@dimen/spacing_xsmall</item>
  </style>

  <style name="FormatButtonIcon" parent="BorderlessBackgroundView">
    <item name="android:layout_width">@dimen/icon_size_xlarge</item>
    <item name="android:layout_height">@dimen/icon_size_large</item>
    <item name="android:tint">@color/material_blue_grey_600</item>
    <item name="android:padding">@dimen/spacing_xsmall</item>
  </style>

  <style name="FormatLabel">
    <item name="android:layout_width">@dimen/icon_size_large</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">end</item>
    <item name="android:textColor">@color/dark_tertiary_text</item>
    <item name="android:textSize">@dimen/font_size_small</item>
    <item name="android:visibility">gone</item>
    <item name="android:layout_marginEnd">8dp</item>
  </style>

  <style name="FormatText">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">top</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:lineSpacingExtra">@dimen/extra_text_line_spacing</item>
    <item name="android:paddingTop">@dimen/spacing_xsmall</item>
    <item name="android:paddingStart">@dimen/spacing_xxsmall</item>
    <item name="android:paddingEnd">@dimen/spacing_xxsmall</item>
    <item name="android:paddingBottom">@dimen/spacing_xsmall</item>
    <item name="android:layout_marginStart">@dimen/spacing_normal</item>
    <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
    <item name="android:textColor">@color/transparent</item>
    <item name="android:textColorHint">@color/transparent</item>
    <item name="android:textSize">@dimen/font_size_normal</item>
  </style>

  <style name="FormatEdit" parent="FormatText">
    <item name="android:paddingStart">@dimen/spacing_small</item>
    <item name="android:paddingEnd">@dimen/spacing_small</item>
    <item name="android:layout_marginStart">@dimen/spacing_xxsmall</item>
    <item name="android:layout_marginEnd">@dimen/spacing_xxsmall</item>
  </style>

  <style name="GridText">
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:foregroundGravity">center</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="NoteOptionGridLayout">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:columnCount">3</item>
    <item name="android:columnOrderPreserved">true</item>
    <item name="android:rowOrderPreserved">true</item>
    <item name="android:useDefaultMargins">true</item>
  </style>

  <style name="BottomSheetCardContainer">
    <item name="android:padding">@dimen/spacing_xxsmall</item>
  </style>

  <style name="BottomSheetCardView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/spacing_xxsmall</item>
    <item name="cardCornerRadius">@dimen/spacing_xxsmall</item>
  </style>

  <style name="NoteCreatorToolbarIcon" parent="BorderlessBackgroundView">
    <item name="android:layout_width">@dimen/icon_size_large</item>
    <item name="android:layout_height">@dimen/icon_size_large</item>
    <item name="android:padding">@dimen/spacing_xsmall</item>
    <item name="android:tint">@color/material_grey_600</item>
  </style>
</resources>
